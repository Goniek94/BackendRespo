# =============================================================================
# MARKETPLACE BACKEND - TEST ENVIRONMENT VARIABLES
# =============================================================================
# 
# Konfiguracja środowiska testowego dla Jest
# =============================================================================

# -----------------------------------------------------------------------------
# BASIC CONFIGURATION
# -----------------------------------------------------------------------------

NODE_ENV=test
PORT=5001
HOST=localhost
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------

# MongoDB będzie używać in-memory database z mongodb-memory-server
MONGODB_URI=mongodb://localhost:27017/marketplace-test

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------

# Test JWT secrets - bezpieczne dla testów
JWT_SECRET=test-jwt-secret-for-testing-only-32-chars-long
JWT_REFRESH_SECRET=test-refresh-secret-for-testing-only-32-chars-long
SESSION_SECRET=test-session-secret-for-testing-only

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (MOCK)
# -----------------------------------------------------------------------------

MOCK_EMAIL=true
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=test@example.com
SMTP_PASS=test-password
FROM_EMAIL=test@example.com
FROM_NAME=Test Marketplace

# -----------------------------------------------------------------------------
# SMS CONFIGURATION (MOCK)
# -----------------------------------------------------------------------------

MOCK_SMS=true
TWILIO_ACCOUNT_SID=test-account-sid
TWILIO_AUTH_TOKEN=test-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# DEVELOPMENT/TEST SETTINGS
# -----------------------------------------------------------------------------

DEBUG=marketplace:test
LOG_LEVEL=error
MOCK_PAYMENTS=true

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------

FEATURE_NOTIFICATIONS=true
FEATURE_REAL_TIME_CHAT=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_ANALYTICS=false

# -----------------------------------------------------------------------------
# PERFORMANCE SETTINGS
# -----------------------------------------------------------------------------

REQUEST_TIMEOUT=5000
CACHE_TTL=60
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
